<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/start_service"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/start_service"
        android:layout_below="@+id/title"
        android:onClick="onClickStartService" />
    <Button
        android:id="@+id/stop_service"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/stop_service"
        android:layout_below="@+id/start_service"
        android:onClick="onClickStopService" />
    <Button
        android:id="@+id/displayTargets"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Display target overview"
        android:layout_below="@+id/stop_service"
        android:onClick="displayTargets" />

    <Button
        android:id="@+id/resetDatabase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayTargets"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:onClick="resetDatabase"
        android:text="Reset Database" />
</RelativeLayout>
